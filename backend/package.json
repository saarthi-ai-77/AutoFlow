{
  "name": "autoflow-backend",
  "version": "1.0.0",
  "description": "Production-ready Node.js backend for AutoFlow Studio automation tool",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "migrate": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/database/migrate.ts",
    "seed": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/database/seed.ts",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:build": "docker build -t autoflow-backend .",
    "docker:run": "docker run -p 3001:3001 autoflow-backend",
    "prepare": "husky"
  },
  "keywords": [
    "automation",
    "workflow",
    "backend",
    "nodejs",
    "typescript",
    "express",
    "postgresql",
    "redis"
  ],
  "author": "AutoFlow Team",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "bullmq": "^4.13.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "dataloader": "^2.2.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "kysely": "^0.27.2",
    "kysely-codegen": "^0.10.1",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.2",
    "pg": "^8.11.3",
    "redis": "^4.6.8",
    "socket.io": "^4.7.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.10.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.3",
    "@types/cors": "^2.8.14",
    "@types/dockerode": "^3.3.19",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/morgan": "^1.9.5",
    "@types/node": "^20.6.0",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^9.0.4",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@vitest/coverage-v8": "^0.34.6",
    "@vitest/ui": "^0.34.6",
    "docker": "^0.2.14",
    "eslint": "^8.49.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "testcontainers": "^10.2.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
