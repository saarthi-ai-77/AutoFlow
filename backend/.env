# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/autoflow
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=autoflow
DATABASE_USER=postgres
DATABASE_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=autoflow
JWT_AUDIENCE=autoflow-users

# Encryption
CRYPTO_SECRET=your-32-char-encryption-key-change-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# API Keys
API_KEY_PREFIX=af_live_
API_KEY_HASH_ALGO=sha256

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Webhook Configuration
WEBHOOK_BASE_URL=http://localhost:3001/webhooks

# Queue Configuration
QUEUE_CONCURRENCY=5
QUEUE_ATTEMPTS=3
QUEUE_BACKOFF_DELAY=5000

# Health Check
HEALTH_CHECK_INTERVAL=30000

# Test Configuration
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/autoflow_test
TEST_REDIS_URL=redis://localhost:6379/1